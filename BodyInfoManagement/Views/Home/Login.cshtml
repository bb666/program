@model BodyInfoManagement.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "用户登录";
}

<div class="page-header">
    <h1 class="text-center">@ViewBag.Title</h1>
    <p class="text-center">@Html.ActionLink("学生注册", "Create", "Students")&nbsp;|&nbsp;@Html.ActionLink("教师注册", "Create", "Teachers")</p>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.LoginAccount, htmlAttributes: new { @class = "control-label sr-only" })
            <div>
                @Html.EditorFor(model => model.LoginAccount, new { htmlAttributes = new { @class = "form-control", style = "margin:0 auto", placeholder = "登录账号" } })
                @Html.ValidationMessageFor(model => model.LoginAccount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LoginType, htmlAttributes: new { @class = "control-label sr-only" })
            <div>
                @Html.EnumDropDownListFor(model => model.LoginType, htmlAttributes: new { @class = "form-control", style = "margin:0 auto" })
                @Html.ValidationMessageFor(model => model.LoginType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LoginPassword, htmlAttributes: new { @class = "control-label sr-only" })
            <div style="margin:0 auto">
                @Html.EditorFor(model => model.LoginPassword, new { htmlAttributes = new { @class = "form-control", style = "margin:0 auto", placeholder = "密码" } })
                @Html.ValidationMessageFor(model => model.LoginPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div>
                <input type="submit" style="margin:0 auto" value="登录" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
