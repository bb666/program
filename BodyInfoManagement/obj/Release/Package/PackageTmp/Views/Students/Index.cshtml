@model IEnumerable<BodyInfoManagement.Models.Student>

@{
    ViewBag.Title = "学生用户信息";
}

<div class="page-header">
    <h1 class="text-center">@ViewBag.Title</h1>
</div>

@using (Html.BeginForm("Index", "Students", FormMethod.Get))
{
    <div class="form-inline">
        <div class="form-group">
            @Html.ActionLink("添加新项", "Create", null, new { @class = "btn btn-success" })
        </div>
        <div class="form-group">
            @Html.ActionLink("设置所有学生可修改信息", "SetStudentsAuth", "Home", null, new { @class = "btn btn-warning" })
        </div>
        <div class="form-group">
            @Html.ActionLink("设置所有学生不可修改信息", "BackStudentsAuth", "Home", null, new { @class = "btn btn-danger" })
        </div>
        <div class="form-group">
            @Html.TextBox("Id", "", htmlAttributes: new { @class = "form-control", placeholder = "输入学号" })
        </div>
        <input type="submit" value="筛选" class="btn btn-info" />
    </div>
}
<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentGender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAuth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.StudentId, "Details", new { id = item.StudentId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentGender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentPassword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAuth)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.StudentId })|
            @Html.ActionLink("删除", "Delete", new { id=item.StudentId })
        </td>
    </tr>
}

</table>
